@model DailyReportMvcApplication.Models.Customer

@{
    ViewBag.Title = "顧客削除";
}

<h2>顧客削除</h2>

<h3 style="color: red">本当に削除してよろしいですか?</h3>
<fieldset>
    <legend>Customer</legend>

    <div class="display-label">
        @Html.Label("顧客名")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.customer_name)
    </div>

    <div class="display-label">
        @Html.Label("顧客よみ")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.customer_yomi)
    </div>

    <div class="display-label">
        @Html.Label("部課")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.department)
    </div>

    <div class="display-label">
        @Html.Label("営業部署")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.sales_department)
    </div>

    <div class="display-label">
        @Html.Label("主担当")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.owner)
    </div>

    <div class="display-label">
        @Html.Label("郵便番号")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.zip_code)
    </div>

    <div class="display-label">
        @Html.Label("住所")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.address)
    </div>

    <div class="display-label">
        @Html.Label("電話番号")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.tel)
    </div>

    <div class="display-label">
        @Html.Label("Fax")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.fax)
    </div>

    <div class="display-label">
        @Html.Label("URL")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.url)
    </div>

    <div class="display-label">
        @Html.Label("カテゴリ")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.category)
    </div>

    <div class="display-label">
        @Html.Label("メモ")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.memo)
    </div>

    <div class="display-label">
        @Html.Label("サイボウズコード")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.cybozu_seq)
    </div>

    <div class="display-label">
        @Html.Label("MA-EYEコード")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ma_eyes_seq)
    </div>
</fieldset>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p style="float: right;">
        <input type="submit" value="削除" />
    </p>
}
<div>
   <button onclick="location.href='@Url.Action("Index", new { page = ViewBag.page })'">一覧へ戻る</button>
</div>
@section css{
    <style type="text/css">
        div.display-label
        {
            float: left;
            width: 19%;
            height: 35px;
        }

        div.display-field
        {
            float: right;
            width: 79%;
            height: 35px;
        }
    </style>
}
